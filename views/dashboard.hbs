<h6>Dashboard</h6>
<h3>Welcome {{name}} </h3>
<p>Here are your poems</p>
{{#if poems}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each poems}}
            <tr>
                <td><a href="/poems/{{_id}}"></a>{{title}}</td>
                <td>{{createdAt}}</td>
                <td><span class="dash-status">{{stat}}</span></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created poems yet!</p>
{{/if}}