<div class="row">
    <div class="col s12 m8">
        <h3>{{poem.title}}
            <small>{{{editIcon poem.user user poem._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{poem.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{poem.user.displayName}}</span>
                <img src="{{poem.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{poem.user._id}}">More From {{poem.user.displayName}}</a>
            </div>
        </div>
    </div>
</div>